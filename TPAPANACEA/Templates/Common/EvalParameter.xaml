<UserControl x:Class="TPAPanacea.Templates.Common.EvalParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TPAPanacea.Templates.Common"
             mc:Ignorable="d" Height="70" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="142*" />
            <ColumnDefinition Width="141*" />
            <ColumnDefinition Width="67*" />
        </Grid.ColumnDefinitions>
        <Label Margin="10,18" HorizontalAlignment="Left"  Name="lblParamName" FontSize="14" FontWeight="Bold" Content="ParamName" Height="35" Width="130"></Label>
        <TextBox HorizontalAlignment="Right" Name="txtEvaluatedMarks" FontSize="14" FontWeight="Bold" Width="141" Height="34" Grid.Column="1" Margin="0,18"></TextBox>
        <Label Name="lblOutOf" FontSize="14" FontWeight="Bold" Grid.Column="2" Height="35"></Label>
        
       
    </Grid>
</UserControl>
